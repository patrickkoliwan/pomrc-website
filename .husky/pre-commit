#!/usr/bin/env sh

echo "ğŸ” Running linters on staged files..."

# Change to the frontend directory to run lint-staged
cd frontend

# Runs lint-staged using the config in the frontend/package.json
npx lint-staged

lint_staged_exit_code=$?

# Return to the root directory
cd ..

if [ $lint_staged_exit_code -ne 0 ]; then
  echo "âŒ Lint-staged failed (exit code $lint_staged_exit_code). Commit aborted."
  exit $lint_staged_exit_code
fi
echo "âœ… Linting checks passed."

echo "ğŸ•µï¸â€â™€ï¸ Running TypeScript compiler check for frontend..."
# Point tsc to the specific tsconfig.json for the frontend package
tsc -p frontend/tsconfig.json --noEmit

tsc_exit_code=$?
if [ $tsc_exit_code -ne 0 ]; then
  echo "âŒ TypeScript check failed (exit code $tsc_exit_code). Commit aborted."
  exit $tsc_exit_code
fi
echo "âœ… TypeScript checks passed."

echo "ğŸš€ Pre-commit checks successful. Proceeding with commit."
exit 0
